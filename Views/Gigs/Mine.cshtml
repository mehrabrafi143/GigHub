@model IEnumerable<GigHub.Core.Models.Gig>
 
@{
    ViewBag.Title = "My Upcoming Gigs";
}

<h2>My Upcoming Gigs</h2>

@if (!Model.Any()) 
{
    <p class="text-warning" >Sorry currently you don't have any gig</p>
}
else
{
    <ul class="gigs">
        @foreach (var gig in Model)
        {
            <li>
                <div class="datetime">
                    <div class="month">
                        @gig.DateTime.ToString("MMM")
                    </div>
                    <div class="date">
                        @gig.DateTime.ToString("d ")
                    </div>
                </div>
                <div class="gig-info">
                    <span class="artist">
                        @gig.Venue
                    
                    </span>
                    <span class="genre">
                        @gig.Genre.Name
                    </span>
                    <div class=" btn-edit-del">
                        <a  data-id ="@gig.Id" class="btn btn-sm-custome btn-link js-delete">Cancel</a>
                        |
                        <a  class="btn btn-sm-custome btn-link"
                            href="@Url.Action("Edit", "Gigs", new {id = gig.Id})">
                            Edit
                        </a>
                    </div>
                </div>
           
            </li>
        }
    </ul>

}


@section scripts
{
    <script>
        $(document).ready(function() {

            $('.js-delete').on('click',

                function (e) {

                    let link = $(e.target);
                   

                    bootbox.confirm({
                        message: "Do you want to cancel this gig?",
                        buttons: {
                            confirm: {
                                label: 'Yes',
                                className: 'btn-default'
                            },
                            cancel: {
                                label: 'No',
                                className: 'btn-danger'
                            }
                        },
                        callback: function (result) {

                            if (result) {

                                $.ajax({
                                        url: '/api/gigs/' + link.data('id'),
                                        method: 'DELETE'
                                    })
                                    .done(function() {
                                        link.parents('li').fadeOut(function() {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function() {
                                        alert("failed");
                                    });
                            }

                        }
                    });


                    

                });

        })
    </script>
}
